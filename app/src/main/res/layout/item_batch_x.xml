<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/cards_spacing"
        android:paddingVertical="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/ItemLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/apkCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintBottom_toTopOf="@id/tagsGroup"
                app:layout_constraintEnd_toStartOf="@id/dataCheckbox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/dataCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintBottom_toTopOf="@id/tagsGroup"
                app:layout_constraintEnd_toStartOf="@id/label"
                app:layout_constraintStart_toEndOf="@id/apkCheckbox"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label"
                style="@style/TextViewWrapped"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Label"
                app:layout_constraintBottom_toTopOf="@id/packageName"
                app:layout_constraintEnd_toStartOf="@id/tags"
                app:layout_constraintStart_toEndOf="@+id/dataCheckbox"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread_inside" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@id/label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/label"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/update"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_updated" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/obbMode"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_obb_data" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/deDataMode"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_de_data" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/extDataMode"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_external_data" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/dataMode"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_data" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/apkMode"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_apk" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appType"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_system" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/packageName"
                style="@style/TextViewWrapped"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.Secondary"
                app:layout_constraintBottom_toTopOf="@id/tagsGroup"
                app:layout_constraintEnd_toStartOf="@id/lastBackup"
                app:layout_constraintStart_toStartOf="@id/label"
                app:layout_constraintTop_toBottomOf="@id/label" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lastBackup"
                style="@style/TextViewWrapped"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.Secondary"
                app:layout_constraintBottom_toTopOf="@id/tagsGroup"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/packageName"
                app:layout_constraintTop_toBottomOf="@id/label" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tagsGroup"
                style="@style/Chip.Group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/apkCheckbox" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
